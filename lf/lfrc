set hidden true
set ignorecase true
# set icons

# open nvim with lf
cmd open $nvim.exe %f%
map e $nvim.exe %f%
map w $pwsh %f%

# go to partition
map ga cd A:\\

# commands of copy, paste, cut and delete
map y copy %f%
map p paste %f%
map d cut %f%
map x delete %f%
map <space> $$HOME/AppData/Local/Programs/QuickLook/QuickLook.exe
