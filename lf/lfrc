set shell pwsh
set hidden true
set ignorecase true
set icons true

# open nvim with lf
cmd open ${{nvim $Env:f.Replace('"','')}}
map <enter> ${{pwsh $Env:f.Replace('"','')}}
map n $nvim
map gl $lazygit
map su $su

# go to partition
map ga cd A:\\

# commands of copy, paste, cut and delete
map XX delete $Env:f

# Functions utils */
map ad ${{
  $dir_name = Read-Host "Directory Name: "
  New-Item $dir_name -ItemType Directory
}}

map af ${{
  $file_name = Read-Host "File Name: "
  New-Item $file_name -ItemType File
}}

map P ${{C:\Users\julio\AppData\Local\Programs\QuickLook\QuickLook.exe $Env:f.Replace('"','')}}
