# set shell pwsh
set hidden true
set ignorecase true
# set icons true

# open nvim with lf
cmd open $nvim.exe %f%
# map e $nvim.exe %f%
map <enter> $pwsh %f%
map n $nvim.exe
map gl $lazygit

# go to partition
map ga cd A:\\

# commands of copy, paste, cut and delete
map y copy %f%
map p paste %f%
map x cut %f%
map DD delete %f%

# Functions utils */
map ad ${{
  $dir_name = Read-Host "Directory Name: "
  New-Item $dir_name -ItemType Directory
}}

map af ${{
  $file_name = Read-Host "File Name: "
  New-Item $file_name -ItemType File
}}
